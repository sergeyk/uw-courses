#departments-list.span-12.prepend-4.append-4.center
  %h2 Listing all departments
  %table
    %tr.header-row
      %td{:rowspan => '2'} Department
      %td{:rowspan => '2'} Evaluations on file
      %td{:colspan => '4'} Average ratings
    %tr.header-row
      %td Overall
      %td Instructor-specific
      %td Course-specific
      %td Grading
    - @departments.each do |dept|
      %tr{:class => cycle('even-row','odd-row')}
        %td= link_to dept.abbrev, department_path(dept)
        %td= dept.number_of_evaluations
        %td= dept.average_overall_rating or "--"
        %td= dept.average_instructor_specific_rating or "--"
        %td= dept.average_course_specific_rating or "--"
        %td= dept.average_grading_rating or "--"
  = will_paginate(@departments) if @departments