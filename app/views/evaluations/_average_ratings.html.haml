%table
  %tr.header-row
    %td{:rowspan => '2'} Evaluations on file
    %td{:colspan => '4'} Average ratings
  %tr.header-row
    %td Overall
    %td Instructor-specific
    %td Course-specific
    %td Grading
    %tr.even-row
      %td= @hme.number_of_evaluations
      %td= @hme.average_overall_rating or "--"
      %td= @hme.average_instructor_specific_rating or "--"
      %td= @hme.average_course_specific_rating or "--"
      %td= @hme.average_grading_rating or "--"